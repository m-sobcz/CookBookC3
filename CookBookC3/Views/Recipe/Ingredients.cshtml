@model IEnumerable<IngredientWithCountUIO>

@await Component.InvokeAsync(nameof(CookBookASP.Components.EditTabsViewComponent).GetASPName(),
    new
    {
        viewName = nameof(CookBookASP.Controllers.RecipeController).GetASPName(),
        tabId = 4
    })

@*Aktualnie przypisane produkty*@
<h3>Aktualne produkty</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Callories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Callories)
                </td>
                <td>

                    <form asp-action=@ASPNames.EditIngredientCount>
                            <input type="hidden" name="id" value="@ViewBag.recipeId" />
                            <input type="hidden" name="ingredientId" value="@item.Id" />
                            <input class="form-control col-4" name="count" value="@item.Count.ToString("F1")" />
                            <input class="btn btn-secondary m-1" type="submit" value="Zmień" />
                    </form>
                </td>
                <td>
                    <a asp-action=@ASPNames.RemoveIngredient method="post" class="btn btn-secondary m-1"
                       asp-route-id=@ViewBag.recipeId asp-route-ingredientId="@item.Id">
                        Usuń
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


@await Component.InvokeAsync(nameof(CookBookASP.Components.IngredientSelectionViewComponent).GetASPName(), new
{ recipeId = @ViewBag.recipeId, pageId = ViewBag.pageId, category = ViewBag.category })
